# ESPHome Secrets Template
# Copy this file to secrets.yaml and fill in your actual values
# secrets.yaml is gitignored for security

# WiFi Configuration
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# Fallback AP (hotspot) for initial setup
ap_password: "fallback-hotspot-password"

# Home Assistant API
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
api_encryption_key: "your-32-byte-hex-encryption-key-here"

# OTA Updates
# Use same format as API key or a simple password
ota_password: "your-ota-password-here"

# Optional: Static IP Configuration (uncomment if needed)
# static_ip: "192.168.1.100"
# gateway: "192.168.1.1"
# subnet: "255.255.255.0"
# dns1: "192.168.1.1"
# dns2: "8.8.8.8"
