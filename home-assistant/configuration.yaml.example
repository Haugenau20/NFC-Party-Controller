# Home Assistant Configuration Example
# This demonstrates how to set up the package system for the NFC Party Controller

# Enable package-based configuration
homeassistant:
  # Customize entity names and icons
  customize: !include customize.yaml
  
  # Load all packages from the packages directory
  packages: !include_dir_named packages/

# Enable default integrations
default_config:

# HTTP configuration (adjust for your security needs)
http:
  use_x_forwarded_for: true
  trusted_proxies:
    - 127.0.0.1
    - ::1

# Enable frontend
frontend:
  themes: !include_dir_merge_named themes/

# Enable Lovelace UI mode
lovelace:
  mode: yaml
  # Optional: Load dashboards from files
  dashboards:
    nfc-party-control:
      mode: yaml
      title: Party Control
      icon: mdi:party-popper
      show_in_sidebar: true
      filename: dashboards/party_control.yaml

# Recorder - configure database retention
recorder:
  purge_keep_days: 7
  commit_interval: 30
  db_url: !secret db_url  # Optional: Use external database

# History
history:
  include:
    domains:
      - media_player
      - input_boolean
      - input_select
    entities:
      - counter.songs_played_today
      - sensor.nfc_party_controller_volume_pot

# Logger - adjust logging levels
logger:
  default: info
  logs:
    homeassistant.components.esphome: debug
    homeassistant.components.media_player: debug

# Text-to-speech (optional)
tts:
  - platform: google_translate
    service_name: google_say

